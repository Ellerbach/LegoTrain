@model IEnumerable<LegoTrain.Models.Train>

<h2>List of trains</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NominalSpeed)</th>
            <th>@Html.DisplayNameFor(model => model.Channel)</th>
            <th>@Html.DisplayNameFor(model => model.Output)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>@Html.DisplayFor(modelitem => item.NominalSpeed)</td>
                <td>@Html.DisplayFor(modelitem => item.Channel)</td>
                <td>@Html.DisplayFor(modelitem => item.Output)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

    <p>
        @Html.ActionLink("Create New", "Create", "Train", new { @class = "btn btn-primary" })
    </p>
</table>
