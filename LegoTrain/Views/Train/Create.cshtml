@model LegoTrain.Models.Train

<h2>Create a new train</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NominalSpeed" class="control-label"></label>
        @Html.DropDownListFor(model => model.NominalSpeed, (SelectList)ViewBag.SpeedOptions, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Channel" class="control-label"></label>
        @Html.DropDownListFor(model => model.Channel, (SelectList)ViewBag.ChannelOptions, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Output" class="control-label"></label>
        @Html.DropDownListFor(model => model.Output, (SelectList)ViewBag.OutputOptions, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>