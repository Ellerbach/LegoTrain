@model LegoTrain.Models.Switch

<h2>Edit a switch</h2>

<form asp-action="Edit">

    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.X, new { @class = "control-label" })
        @Html.EditorFor(model => model.X, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Y, new { @class = "control-label" })
        @Html.EditorFor(model => model.Y, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rotation, new { @class = "control-label" })
        @Html.EditorFor(model => model.Rotation, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsLeft, new { @class = "control-label" })
        @Html.CheckBoxFor(model => model.IsLeft, new { @class = "form-check-label" })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>